{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "include": ["index.ts", "src/**/*.ts"],
  "exclude": ["**/*.test.ts", "node_modules"]
}
